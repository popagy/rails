<h1>Editing page</h1>

<%= error_messages_for :page %>

<% form_for(:page, :url => page_path(@page), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', page_path(@page) %> |
<%= link_to 'Back', pages_path %>